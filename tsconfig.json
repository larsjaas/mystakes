{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "noImplicitAny": true,
        "removeComments": true,
        "target": "es6",
        "jsx": "react",
        "preserveConstEnums": true,
        "rootDir": "frontend/src/",
        "typeRoots": [
            "node_modules/@types"
        ],
        "outDir": "frontend/dist/",
        "sourceMap": false
    },
    "include": [
        "frontend/src/"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}